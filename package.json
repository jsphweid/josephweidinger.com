{
  "name": "joseph-weidinger-website",
  "version": "0.1.0",
  "description": "repo for my website",
  "main": "dist/package/index.js",
  "scripts": {
    "start": "webpack-dev-server --config webpack.dev.config.js",
    "build": "npm run clean && npm run build:artifacts && npm run build:package",
    "build:artifacts": "webpack --config webpack.prod.config.js",
    "build:package": "tsc && npm run build:sass",
    "build:sass": "node-sass src/styles.scss dist/package/styles.css",
    "clean": "rm -rf dist",
    "lint": "tslint -p ./tsconfig.json",
    "test": "npm run lint && jest -t",
    "test:dev": "jest --watchAll -t",
    "analyze:size": "NODE_ENV=fakerun webpack --config webpack.library.config.js"
  },
  "author": "",
  "license": "ISC",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/src/.*\\.test.(ts|tsx|js)$"
  },
  "devDependencies": {
    "@types/jest": "^21.1.4",
    "@types/query-string": "^5.0.1",
    "@types/react": "^16.0.13",
    "@types/react-dom": "^16.0.1",
    "@types/webpack": "^3.0.13",
    "@types/webpack-env": "^1.13.2",
    "@types/webspeechapi": "0.0.29",
    "assets-webpack-plugin": "^3.5.1",
    "awesome-typescript-loader": "^3.2.3",
    "base64-inline-loader": "^1.1.0",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.1",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^21.2.1",
    "node-sass": "^4.5.3",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-hot-loader": "^3.0.0-beta.6",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.2",
    "style-loader": "^0.19.0",
    "ts-jest": "^21.1.3",
    "tslint": "^5.7.0",
    "tslint-config-airbnb": "^5.3.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.5.3",
    "url-loader": "^0.6.2",
    "webpack": "^3.8.1",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-server": "^2.9.2"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  }
}
